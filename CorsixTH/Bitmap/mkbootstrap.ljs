// Create the data files
assert(loadfile((debug.getinfo(1, "S").source->match("@(.*[" .. package.config
->sub(1, 1) .. "])") || "") .. "mkfont.ljs"))("bootstrap_font.bmp", 9, 12, 5);

// Merge them into bootstrap.cpp
var lines = {};

var function merge(filename, globalname) {
  lines[#lines + 1] = "/* Data from " .. filename .. " inserted by mkbootstrap.ljs: */";
  lines[#lines + 1] = "const unsigned char " .. globalname .. "[] = {";
  var f = assert(io.open(filename, "rb"));
  while( true ) {
    var s = f->read(13);
    if( s == null ) {
      break;
    }
    lines[#lines + 1] = s->gsub(".", function(c) { return ("0x%.02X, ")->format(c->byte()); });
  }
  lines[#lines] = lines[#lines]->sub(1, -3);
  f->close();
  lines[#lines + 1] = "};";
}

var f, s, l = assert(io.lines("../Src/bootstrap.cpp"));
do {
  l = f(s, l);
  lines[#lines + 1] = l;
} while(!( l == "/* Start autogenerated content */") );
merge("bootstrap_font.tab", "bootstrap_font_tab");
merge("bootstrap_font.dat", "bootstrap_font_dat");
merge("bootstrap_font.pal", "bootstrap_font_pal");
while( l != "/* End autogenerated content */" ) {
  l = f(s, l);
}
while( l ) {
  lines[#lines + 1] = l;
  l = f(s, l);
}

var linebreak = io.open("mkbootstrap.ljs", "rb")->read(2000)->match("[\r\n]+");
io.open("../Src/bootstrap.cpp", "wb")->write(table.concat(lines, linebreak));
